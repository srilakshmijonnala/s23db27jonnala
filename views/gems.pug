  - let items=results
  div(class="container-fluid")
  div(class="row")
  each value,index in items
    div(class="col-sm-2" onclick=`buy(${index})`)  #{value.gems_color} Gems Breed  #{value.gems_breed}, price #{value.gems_price}
  script. 
    function buy(index)
    {
      alert(`You purchased Item ${index+1}`)
    } 